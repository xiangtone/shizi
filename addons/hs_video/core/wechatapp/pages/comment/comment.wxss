/* pages/comment/comment.wxss */
@import "/commons/comment/comment.wxss";

page{
  background-color: #fff;
}

.comment-list {
  width: 100%;
  
}

.comment-one {
  width: 100%;
  padding: 20rpx 24rpx;
  border-top: 1rpx #eee solid;
}

.comment-title {
  width: 100%;
  height: 100rpx;
}

.left {
  width: 80rpx;
  height: 100%;
  margin-right: 12rpx;
}

.left image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
}

.right {
  height: 100%;
  margin-right: 24rpx;
}

.bottom{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx #eee solid;
  background-color: #fff;
  padding: 0 20rpx;
}
.btn{
  width: 100%;
  padding: 10rpx;
  background-color: #bbb;
  border-radius: 10rpx;
  color:#eee;
  
}

.Toast {
  position: absolute;
  top: 440rpx;
  left: 255rpx;
  width: 240rpx;
  height: 240rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 10rpx;
  z-index: 999;
  text-align: center;
}

.Toast image {
  width: 120rpx;
  height: 84rpx;
  margin-top: 52rpx;
}