.share-box {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 40rpx 0 80rpx 0;
}

.share-block {
  width: 600rpx;
  border-radius: 10rpx;
  background-color: #fff;
  padding-bottom: 20rpx;
}

.share-banner {
  width: 100%;
  height: 400rpx;
}

.share-banner image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx 10rpx 0 0;
}

.share-title {
  width: 100%;
  font-size: 13pt;
  padding: 40rpx;
  font-weight: bold;
}

.share-bottom {
  width: 100%;
}

.share-bottom image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
  margin-bottom: 20rpx;
}

.share-bottom text {
  font-size: 9pt;
}

.share-cancel {
  height: 80rpx;
  margin: 40rpx 60rpx 0 60rpx;
  background-color: #ff4544;
  border-radius: 10rpx;
  color: #fff;
}
.share-warning {
  position: absolute;
  top: 200rpx;
  left: 255rpx;
  width: 240rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 10rpx;
  z-index: 999;
  text-align: center;
}

.share-warning image {
  width: 120rpx;
  height: 120rpx;
  /* margin-top: 52rpx; */
}
