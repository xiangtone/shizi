<!-- pages/video/video.wxml -->
<import src="/commons/bg/bg.wxml" />
<template is="bg" data="{{store: store,a:2}}" />
<!-- 客服开始 -->
<import src="/commons/float-icon/float-icon.wxml" />
<template is="item" data="{{store: store,a:2,shareShow:0}}" />
<!-- 客服结束 -->
<view style="width:680rpx;margin: 0 auto;padding:45rpx 0;font-size:30rpx;color:#333333;">
  <view style="box-shadow: 4px 10px 6px 4px rgba(140,32,27, 0.5);">
    <view class='flex-y-center' style='width:680rpx;height:90rpx;margin:0 auto ;position:relative;background: url(http://www.dushujielong.com/fm/shizi/wxapp/images/course/img_course_class_tablebar1.png);background-position: left top;background-size:100% 100%;background-repeat:no-repeat;'>
      <!-- <image class='w-100 h-100' src="http://www.dushujielong.com/fm/shizi/wxapp/images/course/img_course_class_tablebar1.png" style='position:absolute;top:0;left:0' /> -->
      <view style='margin:auto;font-size:30rpx;font-weight:700;color:#275359;letter-spacing:4rpx'>
        <text class='{{show_top=="lesson"?"select_top":""}}' bindtap='choose_top' data-type-name="lesson">课时排行</text> |
        <text bindtap='choose_top' data-type-name="ex" class='{{show_top=="ex"?"select_top":""}}'>练习排行</text>
      </view>
    </view>
    <view>
      <view class="weui-cell class-list-cell-area" wx:for='{{list_top}}'>
        <view class="weui-cell__hd input-hd-area">
          <view class="weui-label label-bold" style='height:102rpx;width:102rpx;border-radius: 15rpx;background: url({{item.img_url}});background-position: left top;background-size:102rpx 102rpx;background-repeat:no-repeat;'>
            <!-- <image class="h-100 w-100" src='{{item.img_url}}'></image> -->
          </view>
        </view>
        <view class="weui-cell__bd">
          <navigator url='/pages/class-user-list/class-user-list?class_id={{item.id}}'>{{item.class_name}}</navigator>
        </view>
        <view class="weui-cell__ft">ft</view>
      </view>
    </view>
  </view>
</view>
<view bindtap="createClass">
  <import src="/commons/button-a/button-a.wxml" />
  <template is="buttonA" data="{{buttonTitle:'创建班级'}}" />
</view>
<view style="width:680rpx;margin: 0 auto;padding:45rpx 0;font-size:30rpx;color:#333333;">
  <view style="box-shadow: 4px 10px 6px 4px rgba(140,32,27, 0.5);">
    <view class='flex-y-center' style='width:680rpx;height:90rpx;margin:0 auto ;position:relative;background: url(http://www.dushujielong.com/fm/shizi/wxapp/images/course/img_course_class_tablebar1.png);background-position: left top;background-size:100% 100%;background-repeat:no-repeat;'>
      <!-- <image class='w-100 h-100' src="http://www.dushujielong.com/fm/shizi/wxapp/images/course/img_course_class_tablebar1.png" style='position:absolute;top:0;left:0' /> -->
      <view style='margin:auto;font-size:30rpx;font-weight:700;color:#275359;letter-spacing:4rpx'>
        <text class='select_top'>我的班级</text>
      </view>
    </view>
    <view>

      <view class="weui-cell class-list-cell-area" wx:for='{{list_my_class}}'>
        <view class="weui-cell__hd input-hd-area">
          <view class="weui-label label-bold" style='height:102rpx;width:102rpx;border-radius: 15rpx;background: url({{item.img_url}});background-position: left top;background-size:102rpx 102rpx;background-repeat:no-repeat;'>
            <!-- <image class="h-100 w-100" src='{{item.img_url}}'></image> -->
          </view>
        </view>
        <view class="weui-cell__bd">
          <navigator url='/pages/class-user-list/class-user-list?class_id={{item.class_id}}'>{{item.class_name}}</navigator>
        </view>
        <view class="weui-cell__ft">ft</view>
      </view>

    </view>
  </view>
</view>
<view class="loading-bar {{show_loading_bar?'active':''}}" style="text-align: center">
  <image style="width: 160rpx;height: 80rpx" src="/images/loading.svg"></image>
</view>
<view class='Toast' wx:if='{{isShowToast}}'>
  <image src='/images/icon-true.png'></image>
  <view style=' margin-top: 32rpx;color:#fff;'>{{toast_text}}</view>
</view>
<include src="/commons/comment/comment.wxml" />
<include src="/commons/share/share.wxml" />