      <text style="color: #fff;text-shadow: 2rpx 6rpx 8rpx #275359;">{{cat_name}}</text>
    </view>
  </view>
  <view style='width:714rpx;margin: 0 auto;color:#a67548'>
    <view class="weui-cell class-list-cell-area flex-y-center flex-x-center" style='font-size:33rpx;font-weight:700;height:100rpx;'>
      目录
    </view>

    <view class="weui-cell class-list-cell-area flex-y-center flex-x-center" style='font-size:30rpx;height:100rpx;' wx:for='{{video_list}}' wx:key='{{index}}'>
      <view style='width:100%;height:100%;position:relative'>
        <!-- <view class='roomWarn' style='position:absolute;left:0;top:-10rpx;color:red;font-size:20rpx;' wx:if='{{item.freeBlink}}'>免费</view> -->
        <view  style='position:absolute;left:0;bottom:0;color:blue;font-weight:700;font-size:36rpx' wx:if='{{item.freeBlink}}'>免费</view>
        <view class='flex-row' bindtap='goVideo' data-video-id='{{item.id}}' wx:else style='position:absolute;left:0;bottom:0;color:red;'>
          <view>{{item.title1}}</view>
          <view>{{item.titleNum}}</view>
        </view>
        <view bindtap='goVideo' data-video-id='{{item.id}}' style='position:absolute;left:105rpx;bottom:0;font-size:34rpx;letter-spacing:8rpx;color:#000'>
          {{item.content}}
        </view>
        <view class='flex-row' style='position:absolute;right:8rpx;bottom:0;'>
          <view class="flex-y-center flex-x-center" catchtap='goChar' data-video-id='{{item.id}}' style='width:50rpx;height:50rpx;border-radius: 50%;background-color:#bbd7e5'>
            <view style='color:#35717b'>字</view>
          </view>
          <view style='width:20rpx;height:50rpx;'></view>
          <view class="flex-y-center flex-x-center" catchtap='goWord' data-video-id='{{item.id}}' style='width:50rpx;height:50rpx;border-radius: 50%;background-color:#b2dacf'>
            <view style='color:#064028'>词</view>
          </view>
          <view style='width:20rpx;height:50rpx;'></view>
          <view class="flex-y-center flex-x-center" catchtap='goSentence' data-video-id='{{item.id}}' style='width:50rpx;height:50rpx;border-radius: 50%;background-color:#ffffe3'>
            <view style='color:#96936a'>句</view>
          </view>
        </view>
      </view>
    </view>

    <view class="weui-cell class-list-cell-area flex-x-center without-line " style='width:714rpx;height:10rpx;'></view>
    <view class='flex-y-center' style='position:absolute;width:714rpx;height:76rpx;margin:0 auto ;position:relative;background: url(http://qiniu.xuedonghanzi.com/uploads/image/e8/e8a7c33fa141fb7f7ab82c8f369808fc.png);background-position: left top;background-size:100% 100%;background-repeat:no-repeat;'>
