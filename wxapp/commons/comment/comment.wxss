.form {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background-color: rgba(0, 0, 0, 0.6);
}

.form-content {
  width: 100%;
  background-color: #000;
  padding: 20rpx 30rpx;
  color: #fff;
}

.form-block {
  width: 100%;
  height: 100rpx;
  border-top: 1rpx #414141 solid;
}


.img-block {
  flex-wrap: wrap;
  width: 100%;
  margin-bottom: 10rpx;
}

.img-block image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 12rpx;
  margin-top: 12rpx;
}
.submit{
  line-height: 2;
  background-color: #bbb;
  color: #eee;
}
.submit.active{
  background-color: #e4b525;
}
.hid{
  width: 100%;
  height: 50%;
}
